/* recharge.wxss */
page {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  width: 100%;
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 60rpx;
  color: #999;
  background-color: transparent;
  padding: 0;
  margin: 0;
  min-width: auto;
  line-height: normal;
}

.close-btn:active {
  color: #666;
  background-color: transparent;
}

.current-balance {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.balance-label {
  font-size: 30rpx;
  color: #666;
}

.balance-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #673ab7;
}

.package-list {
  margin-bottom: 40rpx;
}

.package-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.package-item {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.package-item:hover {
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.package-item.selected {
  border-color: #673ab7;
  box-shadow: 0 0 0 2rpx rgba(103, 58, 183, 0.2);
}

.package-info {
  flex: 1;
}

.package-count {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.package-price {
  font-size: 32rpx;
  color: #673ab7;
  font-weight: bold;
}

.package-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.selected-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #673ab7;
  color: white;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
}

.recharge-btn-container {
  padding: 0 20rpx;
  margin-top: 60rpx;
}

.recharge-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #673ab7 0%, #512da8 100%);
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 50rpx;
  border: none;
  outline: none;
  box-shadow: 0 4rpx 20rpx rgba(103, 58, 183, 0.3);
}

.recharge-btn:active {
  opacity: 0.8;
}

.recharge-btn:disabled {
  background-color: #ccc;
  box-shadow: none;
  opacity: 0.6;
}