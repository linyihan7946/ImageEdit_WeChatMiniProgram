<!-- recharge.wxml -->
<view class="container">
  <view class="header">
    <text class="title">充值中心</text>
    <button class="close-btn" bindtap="onClose">×</button>
  </view>
  
  <view class="current-balance">
    <text class="balance-label">当前剩余次数</text>
    <text class="balance-value">{{remainingCount}}次</text>
  </view>
  
  <view class="package-list">
    <text class="package-title">选择充值套餐</text>
    
    <view 
      wx:for="{{packages}}" 
      wx:key="id"
      class="package-item {{selectedPackageId === item.id ? 'selected' : ''}}"
      bindtap="onSelectPackage" 
      data-id="{{item.id}}"
    >
      <view class="package-info">
        <text class="package-count">{{item.count}}次</text>
        <text class="package-price">¥{{item.price}}</text>
      </view>
      <view class="package-desc">{{item.desc}}</view>
      <view wx:if="{{selectedPackageId === item.id}}" class="selected-icon">✓</view>
    </view>
  </view>
  
  <view class="recharge-btn-container">
    <button 
      class="recharge-btn" 
      bindtap="onRecharge" 
      disabled="{{!selectedPackageId}}"
    >
      确认充值
    </button>
  </view>
</view>