/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f8f8f8;
}

.container {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  padding-bottom: 100rpx; /* 为底部导航栏预留空间 */
}

.header {
  width: 100%;
  padding: 30rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.bottom-right-count {
  position: fixed;
  bottom: 120rpx; /* 调整位置，避免被底部导航栏遮挡 */
  right: 40rpx;
  z-index: 100;
}

.remaining-count {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx 20rpx;
  background-color: #f0f0f0;
  border-radius: 30rpx;
  font-size: 26rpx;
}

.count-label {
  color: #666;
}

.count-value {
  color: #07c160;
  font-weight: bold;
  font-size: 28rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

.welcome {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.logout-btn {
  font-size: 26rpx;
  color: #666;
  background-color: transparent;
  padding: 0;
  margin: 0;
  min-width: auto;
  line-height: normal;
}

.logout-btn:active {
  color: #999;
  background-color: transparent;
}

.main-content {
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 30rpx;
}

.vertical-button {
  width: 80%;
  margin: 0;
  padding: 0;
  min-width: auto;
  border: none;
  outline: none;
}

/* 重置按钮默认样式 */
.vertical-button::after {
  border: none;
}

