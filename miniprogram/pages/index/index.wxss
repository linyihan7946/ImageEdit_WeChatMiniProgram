/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f8f8f8;
}

.container {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

.header {
  width: 100%;
  padding: 30rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

.welcome {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.logout-btn {
  font-size: 26rpx;
  color: #666;
  background-color: transparent;
  padding: 0;
  margin: 0;
  min-width: auto;
  line-height: normal;
}

.logout-btn:active {
  color: #999;
  background-color: transparent;
}

.main-content {
  flex: 1;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.colorize-button {
  width: 80%;
  height: 100rpx;
  background-color: #07c160;
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(7, 193, 96, 0.3);
}

.colorize-button:active {
  opacity: 0.8;
  transform: scale(0.98);
}
