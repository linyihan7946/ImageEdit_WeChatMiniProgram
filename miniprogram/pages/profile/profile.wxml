<!--profile.wxml-->
<view class="profile-container">
  <view class="profile-header">
    <image class="profile-avatar" src="{{userAvatar || '/images/avatar-placeholder.svg'}}"></image>
    <text class="profile-name">{{username || '微信用户'}}</text>
  </view>
  
  <view class="profile-info">
    <view class="info-item">
      <text class="info-label">用户ID</text>
      <text class="info-value">{{userId || '未设置'}}</text>
    </view>
    <view class="info-item">
      <text class="info-label">手机号</text>
      <text class="info-value">{{phone || '未绑定'}}</text>
    </view>

    <view class="info-item">
      <text class="info-label">剩余编辑次数</text>
      <text class="info-value">{{remainingCount || 0}}</text>
    </view>
  </view>
  
  <view class="profile-actions">
    <button class="action-btn" bindtap="onEditProfile">编辑资料</button>

  </view>
</view>