/* watermark-remove.wxss */
page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.container {
  padding: 30rpx;
  box-sizing: border-box;
}

/* 头部样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.back-button {
  background-color: #1296DB;
  color: white;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 44rpx;
  line-height: normal;
  height: 88rpx;
  min-height: 88rpx;
}

.back-button::after {
  border: none;
}

.usage-info {
  font-size: 28rpx;
  color: #666;
}

/* 操作区域样式 */
.action-area {
  margin-bottom: 40rpx;
  display: flex;
  justify-content: center;
}

.choose-button {
  background-color: #7ED321;
  color: white;
  font-size: 32rpx;
  padding: 20rpx 60rpx;
  border-radius: 44rpx;
  line-height: normal;
  height: 88rpx;
  min-height: 88rpx;
  width: 80%;
  max-width: 500rpx;
}

.choose-button::after {
  border: none;
}

/* 图片显示区域样式 */
.image-display-area {
  width: 100%;
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.image-container {
  position: relative;
  width: 100%;
  height: 600rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
}

.result-image {
  width: 100%;
  height: 100%;
}

.image-hint {
  position: absolute;
  top: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
}

.image-status {
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(255, 255, 255, 0.8);
  color: #333;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
}

/* 保存按钮样式 */
.save-button {
  background-color: #FF9500;
  color: white;
  font-size: 28rpx;
  padding: 15rpx 40rpx;
  border-radius: 44rpx;
  line-height: normal;
  height: 80rpx;
  min-height: 80rpx;
  margin: 0 auto;
  display: block;
  width: 60%;
}

.save-button::after {
  border: none;
}

/* 响应式调整 */
@media screen and (max-width: 375px) {
  .image-container {
    height: 500rpx;
  }
  
  .choose-button,
  .back-button,
  .save-button {
    font-size: 26rpx;
  }
}
