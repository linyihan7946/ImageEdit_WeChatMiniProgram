<!-- watermark-remove.wxml -->
<view class="container">
  <!-- 操作区域 -->
  <view class="action-area">
    <button class="choose-button" bindtap="chooseImage" loading="{{isProcessing}}">
      {{isProcessing ? '处理中...' : '选择图片去水印'}}
    </button>
    <view class="usage-info">今日剩余: {{GLOBAL_CONFIG.freeEditCount - todayUsage}}次</view>
  </view>

  <!-- 图片显示区域 -->
  <view class="image-display-area" wx:if="{{processedImageUrl || originalImagePath}}">
    <view class="image-container">
      <image 
        class="result-image" 
        src="{{isShowingOriginal ? originalImagePath : processedImageUrl}}" 
        mode="aspectFit"
      ></image>
      <view class="image-status">{{isShowingOriginal ? '当前显示：原图' : '当前显示：处理后的图片'}}</view>
    </view>
    
    <!-- 操作按钮区域 -->
    <view class="button-area">
      <button class="toggle-button" bindlongpress="onShowOriginal" bindtouchend="onShowProcessed">长按显示原图</button>
      <button class="save-button" bindtap="saveImage">保存图片</button>
    </view>
  </view>
</view>
