/* register.wxss */
page {
  height: 100vh;
  background-color: #f8f8f8;
  display: flex;
  align-items: center;
  justify-content: center;
}

.container {
  width: 100%;
  max-width: 600rpx;
  padding: 40rpx;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  display: block;
}

.form {
  width: 100%;
}

.input-group {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #e0e0e0;
}

.input:focus {
  border-color: #07c160;
}

.register-btn {
  width: 100%;
  height: 92rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 12rpx;
  margin-top: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(7, 193, 96, 0.3);
}

.register-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.footer {
  text-align: center;
}

.login-text {
  font-size: 28rpx;
  color: #07c160;
}

.login-text:active {
  opacity: 0.8;
}