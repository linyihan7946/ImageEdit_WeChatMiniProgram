/* login.wxss */
page {
  height: 100vh;
  background-color: #f8f8f8;
  display: flex;
  align-items: center;
  justify-content: center;
}

.container {
  width: 100%;
  max-width: 600rpx;
  padding: 40rpx;
}

.header {
  text-align: center;
  margin-bottom: 80rpx;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  display: block;
}

.wechat-login {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.wechat-btn {
  width: 100%;
  height: 96rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
  border-radius: 48rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(7, 193, 96, 0.3);
}

.wechat-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.wechat-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.tips {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  padding: 0 20rpx;
}