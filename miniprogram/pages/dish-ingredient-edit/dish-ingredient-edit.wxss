/* dish-ingredient-edit.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-bottom: 10rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.main-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  height: 2000rpx;
}

.image-selection-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.select-image-btn {
  width: 300rpx;
  height: 80rpx;
  background-color: #07c160;
  color: white;
  font-size: 32rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hint {
  font-size: 24rpx;
  color: #666;
}

.selected-image-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  width: 100%;
  height: 1000rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  align-self: flex-start;
  margin-left: 20rpx;
}

.selected-image {
  width: 640rpx;
  height: 940rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.action-buttons {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  width: 100%;
}

.generate-btn {
  width: 400rpx;
  height: 90rpx;
  background-color: #1989fa;
  color: white;
  font-size: 34rpx;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.generate-btn[disabled] {
  background-color: #c8c9cc;
}

/* 生成图片预览区域样式 */
.generated-image-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  width: 100%;
  margin-top: 20rpx;
}

.generated-image {
  width: 640rpx;
  height: 940rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.generated-image-area .save-btn {
  margin-top: 20rpx;
}

/* 进度条样式 */
.loading-container {
  width: 640rpx;
  height: 940rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.loading-bar {
  width: 400rpx;
  height: 20rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.loading-progress {
  width: 100%;
  height: 100%;
  background-color: #07c160;
  border-radius: 10rpx;
  animation: loading 2s infinite linear;
  background: linear-gradient(90deg, #07c160 0%, #19be6b 50%, #07c160 100%);
  background-size: 200% 100%;
}

@keyframes loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

.save-button-area {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  width: 100%;
}

.save-btn {
  width: 280rpx;
  height: 70rpx;
  background-color: #07c160;
  color: white;
  font-size: 28rpx;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}