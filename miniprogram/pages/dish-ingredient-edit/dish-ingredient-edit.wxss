/* dish-ingredient-edit.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-bottom: 10rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.main-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  height: 2000rpx;
}

.image-selection-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.select-image-btn {
  width: 300rpx;
  height: 80rpx;
  background-color: #07c160;
  color: white;
  font-size: 32rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hint {
  font-size: 24rpx;
  color: #666;
}

.selected-image-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  width: 100%;
  height: 1000rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  align-self: flex-start;
  margin-left: 20rpx;
}

.selected-image {
  width: 640rpx;
  height: 940rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.action-buttons {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  width: 100%;
}

.generate-btn {
  width: 400rpx;
  height: 90rpx;
  background-color: #1989fa;
  color: white;
  font-size: 34rpx;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.generate-btn[disabled] {
  background-color: #c8c9cc;
}

/* 弹框样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
  transition: all 0.3s ease;
}

.modal-content {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 650rpx;
  max-height: 80vh;
  background-color: #fff;
  border-radius: 20rpx;
  z-index: 1000;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
  background-color: #fafafa;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  width: 50rpx;
  height: 50rpx;
  font-size: 40rpx;
  color: #999;
  background-color: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.modal-body {
  padding: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  max-height: 60vh;
  overflow-y: auto;
}

.preview-image {
  width: 100%;
  height: 100%;
  max-height: 500rpx;
  border-radius: 10rpx;
}

.modal-footer {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: center;
  background-color: #fafafa;
}

.save-btn {
  width: 200rpx;
  height: 70rpx;
  background-color: #07c160;
  color: white;
  font-size: 28rpx;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}