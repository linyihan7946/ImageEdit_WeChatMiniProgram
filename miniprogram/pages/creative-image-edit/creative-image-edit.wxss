/* creative-image-edit.wxss */
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 15rpx;
  color: #333;
}

.prompt-area {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin: 0 20rpx 0rpx 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.prompt-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.prompt-input {
  width: 100%;
  height: 120rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 15rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.image-upload-area {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin: 20rpx 20rpx 0rpx 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  width: calc(100% - 40rpx);
  height: 60vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.upload-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 10rpx;
  flex: 1;
  overflow-y: auto;
}

.image-item {
  width: 200rpx;
  height: 200rpx;
  position: relative;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.remove-image {
  position: absolute;
  top: 5rpx;
  right: -10rpx;
  width: 30rpx;
  height: 30rpx;
  background-color: #ff4757;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.remove-icon {
  color: #fff;
  font-size: 24rpx;
  line-height: 1;
}

.add-image {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #999;
}

.add-icon {
  font-size: 60rpx;
  line-height: 1;
  margin-bottom: 5rpx;
}

.add-text {
  font-size: 24rpx;
}

.image-count {
  font-size: 24rpx;
  color: #999;
}

.generate-button {
  width: calc(100% - 40rpx);
  height: 80rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin: 0 20rpx 20rpx 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.generate-button[disabled] {
  background-color: #a5e8c8;
}

.result-area {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin: 0 20rpx 20rpx 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.result-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.generated-image {
  width: 100%;
  border-radius: 8rpx;
  margin-bottom: 15rpx;
}

.save-button {
  width: 100%;
  height: 80rpx;
  background-color: #1890ff;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.save-button:active {
  background-color: #d32f2f;
}

/* 预览弹框样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  height: 80vh;
  background-color: #fff;
  border-radius: 20rpx;
  z-index: 1001;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
  background-color: #fff;
  z-index: 1002;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 48rpx;
  color: #666;
  line-height: 1;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-body {
  padding: 20rpx;
  flex: 1;
  overflow-y: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f5f5f5;
}

.modal-body image {
  width: 100%;
  height: 100%;
  object-fit: contain;
  background-color: #fff;
  border-radius: 10rpx;
}

.modal-footer {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: center;
}

.modal-button {
  width: 100%;
  margin: 0;
  border-radius: 50rpx;
}